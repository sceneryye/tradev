

<div class="container">
  <div class="title">
    <h3>
      商品详情
    </h3>
  </div>
  <% layout = Ecstore::WeihuoShop.where(:shop_id => params[:shop_id]).first.layout %>
  <%= render "partials/goods_list_#{layout}" %>
</div>




<style type="text/css">

  .title {
    margin: 0 auto;
    margin-top:0px;
    color: #000000;
  }
  .shop-logo img {
    width: 100%;
    margin: 0 auto;

  }
  .shop-name {
    font-size: 1.2em;
    text-align: center;
  }
  .shop-intro {
    margin: 15px 0;
    padding: 0 10px;
  }
  .shop-intro .title {
    font-weight: 600;
    text-indent: 2em;
    font-size: 1.5em;
    color: #3c3c3c;
  }
  .shop-intro .intro {
    font-size: 1.4em;
    color: black;
    
  }
  .goods-pic img {
    width: 100%;
  }
  .goods {
    margin: 10px 2px;
  }
  .all-goods {
    margin-bottom: 40px;
  }
  .goods-info{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    
    font-size:12px;
    color: black;
  }

</style>

<link rel="stylesheet" type="text/css" href="/assets/styles.css" />

<script type="text/javascript" src="/assets/qrcodejs/qrcode.min.js"></script>
<script type="text/javascript" src="/assets/sponsor/js/jquery.flip.min.js"></script>
<script type="text/javascript" src="/assets/sponsor/js/script.js"></script>
<script type="text/javascript">
  var url = $('#qrcode').attr('data-url');
  new QRCode(document.getElementById("qrcode"), url);
  $(document).ready(function(){
    $('.goods-pic').each(function(index, e){
      var width = $(this).offsetWidth;
      $(this).style.height = width + 'px';
    });
  });
</script>