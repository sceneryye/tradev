<%=render "shared/metable", :resource => nil %>
<style>
    .help-block {color:red;}
    .am-tabs-warning{
        display: none;
    }

</style>

<header style="text-align: center; " class="demo-header">
  <h1>注册</h1>
</header>

<%=form_for :user,:url=>users_path, :remote=>true,:html=>{:id=>"register_form"} do |f|%>
    <%=hidden_field_tag :shop_id,params[:shop_id]%>
    <%=hidden_field_tag :supplier_id,params[:id]%>
    <%=hidden_field_tag :return_url,params[:return_url]%>
    <%=hidden_field_tag :platform,'mobile'%>
    <div class="connerdiv">

      <div class="am-input-group">
        <span class="am-input-group-label">手机号:</span>

        <%=f.text_field :mobile,:class=>"am-form-field",:placeholder=>"手机号"%>
        <div class="help-block" rel="user_mobile"></div>
      </div>
      <br/>
      <div class="am-input-group">
        <span class="am-input-group-label">真实姓名:</span>

        <%=f.text_field :real_name,:class=>"am-form-field",:placeholder=>"真实姓名"%>
        <div class="help-block" rel="user_real_name"></div>
      </div>
      <br/>
      <div class="am-input-group">
        <span class="am-input-group-label">密码:</span>

        <%=f.password_field :login_password,:class=>"am-form-field",:placeholder=>"密码"%>
        <div class="help-block" rel="user_login_password"></div>
      </div>
      <br/>
      <div class="am-input-group">
        <span class="am-input-group-label">确认密码:</span>

        <%=f.password_field :login_password_confirmation,:class=>"am-form-field",:placeholder=>"确认密码"%>
        <div class="help-block" rel="user_login_password_confirmation"></div>
      </div>
      
      <dd>
        <input type="checkbox" checked="checked" value="agree" name="user[license]" id="license" class="x-input required" autocomplete="off">
        <label for="license" class="checkbox_label" id="i_agree">&nbsp;我已阅读并同意：</label><a href="/pages/zhucexieyi?platform=mobile&supplier_id=<%=@supplier.id%>" target="_top"  id="reg_term">会员注册协议</a>
        <span id="and">和</span><a href="/pages/ysbh?platform=mobile&supplier_id=<%=@supplier.id%>" id="privacy" target="_top">隐私保护政策</a>
        <div class="help-block" rel="user_license"></div>
      </dd>
      </dl>
      <div class="space15"></div>
      <div id="login_msg" style="color:red;font-size:12pt;"></div>
      <%=f.submit "注 册",:class=>"am-btn am-btn-warning am-btn-block"%>
      <div class="space15"></div>
      <% return_url={:return_url => request.url.sub('http://trade','').force_encoding('UTF-8')}.to_query%>
      <a href="/mlogin?shop_id=<%=params[:shop_id]%>&supplier_id=<%=@supplier.id%>&platform=mobile&<%=return_url%>" class="forgetkey">已有账号，去登录&gt;&gt;</a>
    </div>
<%end%>
<%= javascript_include_tag "login" %>