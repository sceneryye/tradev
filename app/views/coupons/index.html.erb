<ul id="J_CouponsList" class="new-coupons-list">
<%@coupons.each do |coupon|%>
  <li>
    <div class="coupon-wrapper">
      <!--<h2><%=coupon.name%>(No.<%=coupon.coupon_prefix%>)</a>
        <i class="hot">hot</i>
      </h2>-->
      <div class="coupon"><!--left begin-->
        <span class="left">
          <span class="description">
           <strong style="color:red;font-size:14px">
              <em><%=coupon.desc%></em>
           </strong>  
          </span>
          <span class="store-logo">
            <a rel="nofollow" href="" href2="" class="clicktrick" title="">
            <!--  <img alt="" title="" style="width:120px;height:120px" src="/assets/store/logo_big.png">-->
            </a>                
          </span>
        </span><!--left end--><!--right begin-->
        <span class="right"  >     
        <br/>    <br/>
         <!--   <em class="free"><em><%=coupon.exclusive ? "不可" : "可"%>与其他优惠券一起使用</em></em>--><br/>
            <!--price or coupon type end-->
          <strong style="color:red; font-size:48px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;￥50</strong>
            <%=link_to coupon_path(coupon) do%>
              <span class="get"><b></b>立即领取</span>
            <%end%>
        </span><!--right end-->
      </div>
      <div class="info">
        <em><i class="date"></i>有效期
          <%=coupon.begin_at.strftime("%Y-%m-%d %H:%M") if coupon.begin_at.present?%> ~ <%=coupon.end_at.strftime("%Y-%m-%d %H:%M") if coupon.end_at.present?%>
        </em>
      </div>
      <div class="info">
       <!-- <em><i class="remain"></i>已领:153470</em>
        <em>今日剩余:<%=coupon.quantity%></em>-->
      </div>
    </div>
  </li>
<%end if @coupons%>
</ul>