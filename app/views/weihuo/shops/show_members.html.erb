<div class="container">
  <div class="title">
    <h3>店铺管理</h3>
  </div>
  
  <table class="table table-striped table-hover table-responsive">
    <tr class="info">
      <div class="row">
        <div class="col-xs-5">
          <th>
            <h4>客户头像</h4>
          </th>
        </div>
        <div class="col-xs-3">
          <th>
            <h4>客户名称</h4>
          </th>
        </div>
        <div class="col-xs-4">
          <th>
            <h4>消费总额</h4>
          </th>
        </div>
      </tr>
      
      <% @members.each_with_index do |member, index| %>
      <% user = Ecstore::User.where(:member_id => member.account_id).first %>
      <tr class="<%= 'info' if index % 2 == 0 %>">
        <div class="row">
          <div class="col-xs-5">
            <td>
              <div class="headimg">
                <img src="<%= user.weixin_headimgurl %>" />
              </div>
            </td>
          </div>
          <div class="col-xs-3">
            <td>
              <h4><%= user.name %></h4>
            </td>
          </div>
          <div class="col-xs-4">
            <td>
              <h4><%= total_profit Ecstore::WeihuoShare.where(:open_id => member.login_name.split('_')[0]) %></h4>
            </td>
          </div>
        </div>
      </tr>
      <% end %>

    </table>
  </div>

  <style type="text/css">
    .title {
      text-align: center;
      margin-bottom: 20px;
    }
    .info {
      background-color: #d9edf7;
    }
    .headimg img {
      width: 80%;
    }
   
  </style>