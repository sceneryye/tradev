<div class="container">
  <div class="title">
    <h3>个人中心</h3>
  </div>

  <table class="table table-striped table-hover table-responsive">
    <tr class="info">
      <div class="row">
        <div class="col-xs-5">
          <td>
            <h4>我的订单</h4>
          </td>
        </div>
        <div class="col-xs-3">
          <td>
            <h4><%= @order_ids.length %></h4>
          </td>
        </div>
        <div class="col-xs-4">
          <td>
            <h4><a href="/weihuo/shops/my_orders?shop_id=<%= params[:shop_id] %>">查看详情</a></h4>
          </td>
        </div>
      </div>
    </tr>

    <tr class="">
      <div class="row">
        <div class="col-xs-5">
          <td>
            <h4>店铺信息</h4>
          </td>
        </div>
        <div class="col-xs-3">
          <td>
            <h4><%= @shop_ids.length %></h4>
          </td>
        </div>
        <div class="col-xs-4">
          <td>
            <h4><a href="/weihuo/shops/my_visited_shops?shop_id=<%= params[:shop_id] %>">查看详情</a></h4>
          </td>
        </div>
      </div>
    </tr>

    <tr class="">
      <div class="row">
        <div class="col-xs-5">
          <td>
            <h4>购物车</h4>
          </td>
        </div>
        <div class="col-xs-3">
          <td>
            <h4><%= (@line_items.try :quantity).to_i %></h4>
          </td>
        </div>
        <div class="col-xs-4">
          <td>
            <h4><a href="/cart/mobile?supplier_id=78&shop_id=<%= params[:shop_id] %>&from=<%= params[:from] %>">查看详情</a></h4>
          </td>
        </div>
      </div>
    </tr>

    <tr class="info">
      <div class="row">
        <div class="col-xs-5">
          <td>
            <h4>地址管理</h4>
          </td>
        </div>
        <div class="col-xs-3">
          <td>

          </td>
        </div>
        <div class="col-xs-4">
          <td>
            <h4><%= link_to "查看详情", weihuo_shops_my_addresses_path(:shop_id => params[:shop_id]) %></h4>
          </td>
        </div>
      </div>
    </tr>


    <tr class="info">
      <div class="row">
        <div class="col-xs-5">
          <td>
            <h4><a href="/weihuo/shops/show_qrcode?shop_id=<%= params[:shop_id] %>">代理加盟</a></h4>
          </td>
        </div>
        <div class="col-xs-3">
          <td>

          </td>
        </div>
        <div class="col-xs-4">
          <td>
            <span class="notice">目前仅面向万家员工</span>
          </td>
        </div>
      </div>
    </tr>
  </table>
</div>







<style type="text/css">

  .title {
    text-align: center;
    margin-bottom: 20px;
  }
  .info {
    background-color: #d9edf7;
  }
  .notice {
    color: #b6b6b4;
  }
  td {
    text-align: center;
  }

</style>