<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

  <title><%=page_title%></title>
  <meta name="keywords" content="<%=meta_keywords%>" />
  <meta name="description" content="<%=meta_description%>" />

  <%=javascript_include_tag "standard"%>
  <%=stylesheet_link_tag "standard"%>

  <%= yield :head%>

  <%=render "shared/baidu" if Rails.env == "production"%>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="/new/css/reset.css" />
  <link rel="stylesheet" type="text/css" href="/new/css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="/new/css/font-awesome.min.css" />
  <link rel="stylesheet" type="text/css" href="/new/css/owl.carousel.css" />
  <link rel="stylesheet" type="text/css" href="/new/css/jquery-ui.css" />
  <link rel="stylesheet" type="text/css" href="/new/css/animate.css" />
  <link rel="stylesheet" type="text/css" href="/new/css/global.css" />
  <link rel="stylesheet" type="text/css" href="/new/css/style.css" />
  <link rel="stylesheet" type="text/css" href="/new/css/responsive.css" />
  <link rel="stylesheet" type="text/css" href="/new/css/option4.css" />
</head>

<body>

  <%=yield :notice%>
  <%= render "shared/header" %>
  <%if controller_name!='home'%>
  <%= render "shared/new_top_menu" %>

  <%= yield :cover %>

  <div id= "main" class="<%=controller_name%> <%=action_name%> clearfix">
    <%end%>
    <%= yield%>
    <%if controller_name!='home'%>
  </div>
  <%end%>
  <%=render "shared/common_footer"%>

  <div id="backToTop" title="返回顶部"><span><em class="at">♦</em><em class="ab">▐</em>返回顶部</span></div>

  <%=render "shared/iframe_cart" if signed_in?%>
  <%=render "shared/iframe_login" unless signed_in?%>
  <%= javascript_include_tag "google-analytics" if Rails.env == "production"%>
</body>
</html>
