<div class="am-g" style="padding: 15px">

  <div data-am-widget="list_news" class="am-list-news am-list-news-default am-no-layout">
    <div class="am-list-news-hd am-cf">
      <a href="javascript:void(0)" class=""><h2 style="border: 4px solid #FF8000"></h2> <h2 style="margin-left: 10px">我参加的活动</h2></a>
    </div>
    <div class="am-list-news-bd">
      <ul class="am-list">
        <%@applicant.each do |applicant| %>
            <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-bottom-left">
              <a href="javascript:void (0)">
                <div class="am-u-sm-2 am-list-thumb">
                  <%if Ecstore::User.find_by_member_id(applicant.member_id).weixin_headimgurl%>
                  <%=image_tag Ecstore::User.find_by_member_id(applicant.member_id).weixin_headimgurl,:id=>"weixin" ,:class => "am-circle",:onerror=>"javascript:this.src='/assets/event.png';"%>
                  <%else%>
                  <img src="/assets/event.png" style="width: 50px; height: 50px;"> <%end%>
                </div>
                <div class="am-u-sm-10 am-list-main">
                  <h4 class="clearstyle evenfont"> <%=Imodec::Event.find(applicant.event_id).name%>  <span class="evenfont" style=";margin-left:23px;font-size: 13px"><%=applicant.name%></span> </h4>
                  <span class="evenfont"> 报名截止时间<%=Time.at(Imodec::Event.find(applicant.event_id).endtime).to_s(:db)%> </span> <br>
                 <span class="evenfont">活动开始时间<%=Time.at(Imodec::Event.find(applicant.event_id).startime).to_s(:db)%> </span> <br>
                  <span class="icon-arr"></span>
                </div></a></li>

        <%end%>
      </ul>
    </div>
  </div>


</div>