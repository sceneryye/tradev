<%= form_for @express_rule,:url => admin_express_rule_path(@express_rule), :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :title, "规则名称", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :title%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :areas, "地区选择", :class => "control-label" %>
      <div class="controls">
        <%=f.text_feild :areas%>
        <%#=f.select :cat_id,options_from_collection_for_select(Ecstore::Category.all,:cat_id,:full_path_name,params[:id].to_i),{:include_blank=>"请选择"},{:class=>"span3"} %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :first_price, "首重价格", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :first_price%>/<%= f.text_field :first_weight%>公斤
      </div>
    </div>

    <div class="control-group">
      <%= f.label :each_add_price, "续重价格", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :each_add_price%>/1公斤
      </div>
    </div>
    
    <div class="control-group">
      <div class="controls">
        <%= f.submit '确定', :class => "btn btn-primary" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to '返回', admin_express_rules_path %>
      </div>
    </div>

  </fieldset>
<% end %>
