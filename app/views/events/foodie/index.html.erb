<div style="padding: 15px">
<div id="amz-home">
  <section id="amz-hero" style="text-align: center">
    <div class="amz-container am-cf">
      <div class="amz-mascot am-scrollspy-init am-scrollspy-inview am-animation-slide-left" data-am-scrollspy="{animation: 'slide-left', delay: 100}">
        <img style="width:40%;" src="/assets/nigailai.jpg" alt="foodie_log" />
        <img style="width:40%;" src="/assets/foodie.jpg" alt="foodie_log" />
      </div>

      <div class="amz-hero-intro">
        <div class="amz-hero-headings">
          <h1 class="clearstyle evenfont" data-am-scrollspy="{animation:'slide-left'}" class="am-scrollspy-init am-scrollspy-inview am-animation-slide-left">欢迎来到贸威活动平台</h1>
          <h2 class="clearstyle evenfont" data-am-scrollspy="{animation:'slide-right', delay: 500}" class="am-scrollspy-init am-scrollspy-inview am-animation-slide-right">活动吧</h2>
        </div>
          </div>
        </div>
      </section>
    </div>
  <div data-am-widget="list_news" class="am-list-news am-list-news-default am-no-layout">
    <!--列表标题-->
    <div class="am-list-news-hd am-cf">
      <!--带更多链接-->
      <a href="/events/party/list?supplier_id=78">
       <h2 style="border: 4px solid #FF8000"></h2> <h2 style="margin-left: 10px">热门活动</h2> <span class="am-list-news-more am-fr">更多 &raquo;</span>
      </a>
    </div>
    <div class="am-list-news-bd">
      <ul class="am-list">
        <%if @events.size>0%>
        <% @events.each do |event| %>
            <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-bottom-left">
              <a href="/events/party/detail?id=<%=event.id%>&supplier_id=78">
                <div class="am-u-sm-2 am-list-thumb">
                  <% if Ecstore::User.find_by_member_id(event.member_id).weixin_headimgurl %>
            <%=image_tag Ecstore::User.find_by_member_id(event.member_id).weixin_headimgurl,:id=>"weixin" ,:class => "am-circle",:onerror=>"javascript:this.src='/assets/event.png';"%>
                 <%else%>
                  <img src="/assets/event.png" class="am-circle" > <%end%>
                </div>
                <div class="am-u-sm-10 am-list-main">
                  <h4 class="clearstyle"> <%=event.name%>   </h4>
                  <span style="font-size: 13px"> 报名截止时间:<%=Time.at(event.endtime).to_s(:db)%> </span> <br>

                  <span class="icon-arr"></span>
                </div></a></li>

        <%end%>

        <%else%>
            <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-bottom-left">
              <a href="javascript:void (0)">
                <div class="am-u-sm-2 am-list-thumb">
                  <img  class="am-circle" src="/assets/error.png" alt="">
                </div>
                <div class="am-u-sm-10 am-list-main">

                  <span style="font-size: 13px">当前没有活动 ,具体发布请留意贸威服务号哦!!!! </span>
                  <span class="icon-arr"></span>
                </div></a></li>
           <%end%>
      </ul>




             </div>
    <!--更多在底部-->
    <!--<div class="am-list-news-ft">-->
      <!--<a class="am-list-news-more am-btn am-btn-default" href="###">查看更多 »</a>-->
    <!--</div>-->
  </div>
  <div id="demo-view" data-backend-compiled="">
    <div data-am-widget="list_news" class="am-list-news am-list-news-default am-no-layout">
      <div class="am-list-news-hd am-cf">
        <a href="###" class=""><h2 style="border: 4px solid #FF8000"></h2> <h2 style="margin-left: 10px">吃货互动</h2></a>
      </div>
      <div class="am-list-news-bd">
        <ul class="am-list">
          <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-bottom-left">
            <a href="/events/party?supplier_id=78&step=1">
            <div class="am-u-sm-2 am-list-thumb">
             <img class="am-circle" src="/assets/foodie.png" alt="" />
            </div>
            <div class="am-u-sm-10 am-list-main">
           <h4 class="clearstyle">活动发布  </h4>
              <span style="font-size: 13px">发表活动、聚餐、…</span>
              <span class="icon-arr"></span>
            </div></a></li>

          <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-bottom-left">
            <a href="/events/party/list?supplier_id=78">
            <div class="am-u-sm-2 am-list-thumb">
              <img class="am-circle" src="/assets/more.png" alt="" />
            </div>
            <div class="am-u-sm-10 am-list-main">
              <h4 class="clearstyle"> 活动报名  </h4>
              <span style="font-size: 13px">报名参加吃货活动,线下聚会…</span>
              <span class="icon-arr"></span>
            </div></a></li>

        </ul>
      </div>
    </div>
  </div>



</div>