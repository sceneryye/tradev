

<%#= current_account.login_name %>

<% if @shop.status == '0' %>
<h2>请等待审核通过</h2>
<% elsif @shop.status == '-1' %>
<h2>您的代理商资格申请失败，请与管理员联系</h2>
<% else %>

<div class="row title" style="height:80px;background-color: #BF1E2E">
  <div class="col-xs-5">

    <div class="shop-name" style="width: 40%;position:relative">
    
      <img src="/new/images/weihuo_logo.png" style="height:40px;position:absolute;left: 5%;top:20px;">
    </div>
  </div>
  <div class="col-xs-7">
    <div class="shop-id" style="color: white;font-size:18px;margin-left: 50%; margin-top: 31px;">
      No.<%= @employee.id %>
    </div>

  </div>
</div>
<div class="container" >

  <%= render 'goods_list' %>

  <% end %>

  <style type="text/css">

    .title {
      margin: 0 auto;
  
      
    }
    .shop-logo img {
      width: 100%;
      margin: 0 auto;

    }
    .shop-name {
      font-size: 1.2em;
      text-align: center;
    }
    .shop-intro {
      margin: 15px 0;
      padding: 0 10px;
    }
    .shop-intro .title {
      font-weight: 600;
      text-indent: 2em;
      font-size: 1.5em;
      color: #3c3c3c;
    }
    .shop-intro .intro {
      font-size: 1.4em;
      color: black;

    }
    .goods-pic img {
      width: 100%;
    }
    .goods {
      margin: 10px 2px;
    }
    .all-goods {
      margin-top:35px;
      margin-bottom: 40px;
    }
    .goods-info{
      text-overflow: -o-ellipsis-lastline;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;

      font-size:12px;
      color: black;
    }

  </style>

  <link rel="stylesheet" type="text/css" href="/assets/styles.css" />

  <script type="text/javascript" src="/assets/qrcodejs/qrcode.min.js"></script>
  <script type="text/javascript" src="/assets/sponsor/js/jquery.flip.min.js"></script>
  <script type="text/javascript" src="/assets/sponsor/js/script.js"></script>
  <script type="text/javascript">
    var url = $('#qrcode').attr('data-url');
    new QRCode(document.getElementById("qrcode"), url);
    $(document).ready(function(){
      $('.goods-pic').each(function(index, e){
        var width = $(this).offsetWidth;
        $(this).style.height = width + 'px';
      });
    });
  </script>