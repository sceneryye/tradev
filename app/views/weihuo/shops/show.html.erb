<div class="container" style=" background-color:#87CEFA">
  <% if @shop.status == '0' %>
  <h2>请等待审核通过</h2>
  <% elsif @shop.status == '-1' %>
  <h2>您的店铺申请失败，请与管理员联系</h2>
  <% else %>

  <div class="row title" style="background: url(/images/homepage/weihuoground.jpg) repeat-x">
    <div class="col-xs-5">

      <div class="shop-logo">
        <img style="width:100px;height:100px;border-radius:100px"src="<%= @shop.logo %>">
      </div>
    </div>
  </div>


  <% if @goods_ids.present? %>
  <div class="row all-goods">
    <% @goods_ids.each_with_index do |goods_id, index| %>
    <% goods = Ecstore::Good.where(:goods_id => goods_id).first %>
    <div class="col-xs-5 <%= 'col-xs-offset-1' if index % 2 == 0 %>">
      <a style="width:50%" href="/weihuo/goods_detail/<%=goods.goods_id%>">
        <div class="goods">
          <div class="goods-pic">
            <img src="<%= goods.medium_pic %>" />
          </div>
        </div>

        <div class="goods-info">
          <%= goods.name %>
        </div>
        <div class="goods-price">
          尾货价：
          <span class="price">
            <%= goods.price %>
          </span>
        </hr>
      </div>

    </div>
  </a>

  <% end %>
</div>
<% end %>

<% end %>



<style type="text/css">

  .title {
    margin: 0 auto;
    margin-top: 20px;
    color: #ea7500;
  }
  .shop-logo img {
    width: 100%;
    margin: 0 auto;

  }
  .shop-name {
    font-size: 1.2em;
    text-align: center;
  }
  .shop-intro {
    margin: 15px 0;
    padding: 0 10px;
  }
  .shop-intro .title {
    font-weight: 600;
    text-indent: 2em;
    font-size: 1.5em;
    color: #3c3c3c;
  }
  .shop-intro .intro {
    font-size: 1.4em;
    color: black;
    
  }
  .goods-pic img {
    width: 100%;
  }
  .goods {
    margin: 10px 2px;
  }
  .all-goods {
    margin-bottom: 40px;
  }
  .goods-info{
  font-size:12px;
 color: black;
  }

</style>

<link rel="stylesheet" type="text/css" href="/assets/styles.css" />

<script type="text/javascript" src="/assets/qrcodejs/qrcode.min.js"></script>
<script type="text/javascript" src="/assets/sponsor/js/jquery.flip.min.js"></script>
<script type="text/javascript" src="/assets/sponsor/js/script.js"></script>
<script type="text/javascript">
  var url = $('#qrcode').attr('data-url');
  new QRCode(document.getElementById("qrcode"), url);
  $(document).ready(function(){
    $('.goods-pic').each(function(index, e){
      var width = $(this).offsetWidth;
      $(this).style.height = width + 'px';
    });
  });
</script>