

<%#= current_account.login_name %>

<% if @shop.status == '0' %>
<h2>请等待审核通过</h2>
<% elsif @shop.status == '-1' %>
<h2>您的代理商资格申请失败，请与管理员联系</h2>
<% else %>
<% provide(:title, @title) %>
<div class="row title" style="height:60px;background-color: #BF1E2E">
  <div class="col-xs-12">

    <div class="shop-name" style="position:relative">
      <% if @shop.layout == 'weihuo' %>
      <img src="/new/images/weihuo_logo.png" style="height:25px;position:absolute;left: 5%;top:15px;">
      <% elsif @shop.layout == 'chuangke' %>
      <span class="logo">社区创客</span>
      <span class="number"><%= params[:id] %>号店</span>
      <div class="chuangke-img"><img src="<%= @shop.logo || '/new/images/ck.png' %>" style="height:55px;position:absolute;right: 1%;top:2px;"></div>
      <% end %>
    </div>
  </div>
  
</div>
<%= render 'carousel' %>
<div class="container" >
  <% if @shop.layout == 'weihuo' %>
  <%= render 'partials/goods_list_weihuo' %>
  <% elsif @shop.layout == 'chuangke' %>
  <%= render 'partials/goods_list_chuangke' %>
  <% end %>
  <% end %>

  <style type="text/css">

    .title {
      margin: 0 auto;
    }
    .shop-name .logo {
      position: absolute;
      color: white;
      font-size: 1.6em;
      font-weight: 1000;
      top: 10px;
      left: 1%;
      margin-left: 0;
    }
    .shop-name .number {
      position: absolute;
      color: white;
      font-size: 1.3em;
      font-weight: 1000;
      top: 14px;
      left: 42%;
    }
    .item img {
      display: inline-block;
      margin: 0 auto;
      width: 100%;
    }
    .shop-logo img {
      width: 100%;
      margin: 0 auto;

    }
    .shop-name {
      font-size: 1.2em;
      text-align: center;
    }
    .shop-intro {
      margin: 15px 0;
      padding: 0 10px;
    }
    .shop-intro .title {
      font-weight: 600;
      text-indent: 2em;
      font-size: 1.5em;
      color: #3c3c3c;
    }
    .shop-intro .intro {
      font-size: 1.4em;
      color: black;

    }
    .goods-pic img {
      width: 100%;
    }
    .goods {
      margin: 10px 2px;
    }
    .all-goods {
      margin-top:35px;
      margin-bottom: 40px;
    }
    .goods-info{
      text-overflow: -o-ellipsis-lastline;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;

      font-size:12px;
      color: black;
    }

  </style>

  <link rel="stylesheet" type="text/css" href="/assets/styles.css" />

  <script type="text/javascript" src="/assets/qrcodejs/qrcode.min.js"></script>
  <script type="text/javascript" src="/assets/sponsor/js/jquery.flip.min.js"></script>
  <script type="text/javascript" src="/assets/sponsor/js/script.js"></script>
  <script type="text/javascript">
    var url = $('#qrcode').attr('data-url');
    new QRCode(document.getElementById("qrcode"), url);
    $(document).ready(function(){
      $('.goods-pic').each(function(index, e){
        var width = $(this).offsetWidth;
        $(this).style.height = width + 'px';
      });
    });
  </script>