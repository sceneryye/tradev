<link rel="stylesheet" type="text/css" href="/assets/timeplug/jquery.datetimepicker.css"/>
<script src="/assets/jquery.min.js"></script>
<script src="/assets/timeplug/jquery.datetimepicker.js"></script>
<%= form_for @goodspromotion_ref,:url=>@action_url,:html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
         <%if @goodspromotion_ref.ref_id%>

    <input type="hidden" value="<%=@goodspromotion_ref.ref_id%>" name="ref_id">
        <%end%>

    <div class="control-group">
      <%= f.label :goods_id, "团购商品", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :goods_id %>
      </div>
    </div>


    <div class="control-group">
      <%= f.label :promotionsprice, "团购价", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :promotionsprice,:value=>@goodspromotion_ref.promotionsprice%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :persons, "团购人", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :persons,:value=>@goodspromotion_ref.persons%>
      </div>
    </div>


    <div class="control-group">
      <%= f.label :description, "描述", :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :description, :value=>@goodspromotion_ref.description ,:style=>"height:100px"%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :from_time, "开始时间", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :from_time,:id=>"from_time" ,:value=>Time.at(@goodspromotion_ref.from_time) .to_s(:db) %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :to_time, "结束时间", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :to_time,:id=>"to_time" , :value=>Time.at(@goodspromotion_ref.to_time) .to_s(:db) %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :status, "启用", :class => "control-label" %>
      <div class="controls">
        <%=f.select :status, {"是"=>"true","否"=>"false" }%>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit '确定', :class => "btn btn-primary" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to '返回', admin_tuans_path %>
      </div>
    </div>
  </fieldset>
<% end %>




<script> $('#from_time').datetimepicker({
    format:'Y-m-d H:i',
    lang:'ch'

});
$('#to_time').datetimepicker({
    format:'Y-m-d H:i',
    lang:'ch'

});

</script>